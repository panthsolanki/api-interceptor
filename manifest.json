{
  "manifest_version": 3,
  "name": "API Interceptor",
  "version": "1.0.0",
  "description": "Block API requests that match your custom regular expressions. Simplify testing by controlling network traffic.",
  "permissions": ["declarativeNetRequest", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "API Interceptor"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
